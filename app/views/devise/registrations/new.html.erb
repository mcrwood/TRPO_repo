<div class="signup-form-container">
  <div class="signup-form">
    <h2>Зарегистрироваться</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :first_name, "Имя" %><br />
        <%= f.text_field :first_name,  autofocus: true, autocomplete: "first_name" %>
      </div>

      <div class="field">
        <%= f.label :last_name, "Фамилия" %><br />
        <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
      </div>

      <div class="field">
        <%= f.label :role %><br />
        <%= f.collection_select :role_ids, Role.where(name: ['landlord', 'tenant']), :id, :name %>
      </div>

      <div class="field">
        <%= f.label :email, "Email" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :password, "Пароль" %>
        <% if @minimum_password_length %>
        <em>(Минимум <%= @minimum_password_length %> символов)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, "Подтвердите пароль" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="actions">
        <div class="button-container">
          <%= f.submit "Зарегистрироваться", class: "btn" %>
        </div>
      </div>
    <% end %>

    <div class="links-container">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

<style>.signup-form-container {
  max-width: 600px;
  margin: 0 auto;
}

/* Стили для самой формы регистрации */
.signup-form {
  padding: 20px;
  border: 1px solid #ccc;
  border-radius: 5px;
  background-color: #f9f9f9;
}

/* Стили для заголовка формы */
.signup-form h2 {
  font-size: 24px;
  color: #333;
  margin-bottom: 20px;
}

/* Стили для полей ввода */
.signup-form .field {
  margin-bottom: 15px;
}

.signup-form .field label {
  font-weight: bold;
}

.signup-form .field input[type="text"],
.signup-form .field input[type="email"],
.signup-form .field input[type="password"] {
  width: 100%;
  padding: 8px;
  font-size: 16px;
  border: 1px solid #ccc;
  border-radius: 4px;
}

/* Стили для кнопки "Зарегистрироваться" */
.signup-form .actions .btn {
  background-color: #007bff;
  color: #fff;
  border: none;
  padding: 10px 20px;
  font-size: 16px;
  border-radius: 4px;
  cursor: pointer;
  text-decoration: none;
}

.signup-form .actions .btn:hover {
  background-color: #0056b3;
}

/* Стили для контейнера ссылок */
.links-container {
  margin-top: 20px;
}

.links-container a {
  display: inline-block;
  margin-right: 10px;
  color: #007bff;
  text-decoration: none;
}

.links-container a:hover {
  text-decoration: underline;
}</style>