<nav class="navbar">
  <ul class="navbar-nav horizontal-nav">
    <li class="nav-item">
      <%= link_to "Главная", apartments_path, class: "nav-link" %>
    </li>
    <li class="nav-item">
      <%= link_to "Оплаты", cart_path,  class: "nav-link" %>
    </li>    
    <% if current_user %>
      <li class="nav-item">
        <%= link_to "Профиль", root_path, class: "nav-link" %>
      </li>
      <li class="home-buttons">
        <%= link_to "Выход", destroy_user_session_path, 'data-turbo-method': :delete, class: "sign-out"%>
      </li>
    <% else %>
      <li class="home-buttons">
        <%= link_to "Sign In", new_user_session_path, class: "log-in" %>
      </li>
      <li class="home-buttons">
        <%= link_to "Sign Up", new_user_registration_path, class: "sign-up" %>
      </li>
    <% end %>
  </ul>
</nav>
<%= turbo_frame_tag "cart" do %>
  <h1>Оплатить недвижимость</h1>
  <% if @cart.orderables.count > 0 %>
    <%= render "cart/orderables" %>
    <p>Всего: <%= @cart.total %></p>
  <% else %>
    <p>У вас нет арендованной недвижимости</p>
  <% end %>
<% end %>
